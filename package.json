{
  "name": "@marchen-dev/core",
  "version": "0.0.1",
  "packageManager": "pnpm@10.7.0",
  "description": "",
  "license": "AGPLv3",
  "author": "Suemor233",
  "scripts": {
    "prepare": "simple-git-hooks",
    "build": "nest build",
    "db:push": "prisma db push",
    "db:seek": "tsx ./prisma/seed.ts",
    "db:deploy": "npx prisma migrate deploy && npx prisma generate",
    "bundle": "rimraf out && npm run build && cd dist && npx ncc build main.js -o ../out --minify -s && cd .. && chmod +x out/index.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "cross-env NODE_ENV=development nest start -w",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@innei/pretty-logger-nestjs": "^0.3.3",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.0.5",
    "@prisma/client": "^6.4.1",
    "@sentry/nestjs": "^9.2.0",
    "@sentry/profiling-node": "^9.2.0",
    "axios": "^1.8.1",
    "bcryptjs": "^3.0.2",
    "chalk": "4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.4",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "@innei/prettier": "^0.15.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@sxzz/eslint-config": "^5.1.1",
    "@types/express": "^5.0.0",
    "@types/lodash": "^4.17.15",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@vercel/ncc": "^0.38.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "globals": "^16.0.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "prisma": "^6.4.1",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "@scarf/scarf",
      "@sentry-internal/node-cpu-profiler",
      "@swc/core",
      "esbuild",
      "prisma",
      "simple-git-hooks"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --ignore-path ./.prettierignore --write "
    ]
  }
}
